  <div class="row">
    <div class="col-xs-12">

      <ul class="breadcrumb">
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Country', :back %></li>
        <li class="active"> <%= @query.countries.titleize %> </li>
      </ul>

    </div>
  </div>

<div class="container">


<h3> <%= @query.countries %> Government Spending, 2015 (%GDP) </h3>
  <div class="row">
    <div class="col-xs-8">
      <div id="tree_graph"></div>
    </div>
    <div class="col-xs-4">
      <div class="row">
        <div class="col-xs-12">
          <div class="card text-center">
            <div class="card-block">
              <h3>About this graph</h3>
              <p>Government spending or expenditure includes all government consumption, investment, and transfer payments (welfare payments made available through the social security system).</p>
              <p><strong>Gross Domestic Product (GDP)</strong> is a measure of the size of a nation's economy. This constitutes the market value of all final goods and services produced in a period (yearly).</p>
              <p class="card-text"> Source: <a href="http://ec.europa.eu/eurostat/statistics-explained/index.php/Government_expenditure_by_function_%E2%80%93_COFOG">ec.europa.eu</p>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <h4>Recommended graphs</h4>
        </div>
        <div class="col-xs-6">
          <div class="card text-center">
            <%= link_to root_path do %>
              <%= image_tag 'bubble1.png', height: 150, width: 163, crop: :fill %>
          <% end %>
         <h5 class="recommendation-text">Compare <%= @query.countries.titleize.split(",").sample %> with other countries </h5>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="card text-center">
            <%= link_to root_path do %>
              <%= image_tag 'map1.png', height: 150, width: 163, crop: :fill %>
          <% end %>
        <h5 class="recommendation-text">More <br> <%= @query.countries.titleize.split(",").sample %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  NEW_DATA = <%= raw @country_data %>;
  function diagonal(s, d) {

    path = `M ${s.y} ${s.x}
            C ${(s.y + d.y) / 2} ${s.x},
              ${(s.y + d.y) / 2} ${d.x},
              ${d.y} ${d.x }`

    return path
  }
  </script>
